@using System.Collections.Generic
@using Menoo.PrinterService.Infraestructure.Database.Firebase.Entities
@model System.Collections.Generic.Dictionary<string, object>
@{
    OrderV2 orderData = (OrderV2)Model["orderData"];
    bool allowLogo = Convert.ToBoolean(Model["allowLogo"]);
}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title></title>
        <style>
            @Model["style"].ToString()
        </style>
    </head>
    <body>
        <div class="invoice-pos">
            <div class="section-center invoince-header">
                <div class="section-center">
                    @if (allowLogo)
                    {
                        <img class="img-logo" src="@Model["logo"].ToString()" alt="MENOO" />
                    }
                    else
                    {
                        <span>MENOO</span>
                    }
                </div>
                <div class="section-center">
                    @Model["title"].ToString()
                </div>
            </div>
            <div class="row">
                <div class="column-50 section-left"><b>N° de reserva:</b> @Model["bookingNumber"].ToString()</div>
                <div class="column-50 section-right"><b>N° de orden: @Model["orderNumber"].ToString()</b></div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="column-50 section-left"><b>Cliente:</b> @Model["clientName"].ToString()</div>
                <div class="column-50 section-right"><b>Fecha: @Model["date"].ToString()</b></div>
            </div>
            <div class="row"><hr /></div>
            <div class="row section-custom-header">
                <div class="section-center"><b>Detalle del pedido</b></div>
            </div>
            <div class="row">
                @foreach (ItemOrderV2 item in orderData.Items)
                {
                    <div class="section-left">
                        <span class="item-quantity">@item.Quantity x </span><b>@item.Name</b>
                        @if (item.Options != null) 
                        {
                            <ul class="item-detail">
                                @{
                                    foreach (ItemOptionV2 option in item.Options)
                                    {
                                        string extra = option.Price == 0 ? "Opción: " + option.Name : option.Quantity + " x " + option.Name;
                                        <li>@extra</li>
                                    }
                                }
                            </ul>
                        }
                    </div>
                }
            </div>
            <div class="row"><hr /></div>
        </div>
    </body>
</html>
