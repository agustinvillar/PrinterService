@using Menoo.PrinterService.Infraestructure.Database.Firebase.Entities
@using System.Globalization
@model System.Collections.Generic.Dictionary<string, object>
    @{
        bool allowLogo = Convert.ToBoolean(Model["allowLogo"]);
        bool isOnlyUser = string.IsNullOrEmpty(Model["userName"].ToString());
    }<!DOCTYPE html>
    <html>
    <head>
        <meta charset="utf-8" />
        <title></title>
        <style>
            @Model["style"].ToString()
        </style>
    </head>
    <body>
        <div class="invoice-pos">
            <div class="section-center invoince-header">
                <div class="section-center invoince-header">
                    <div class="section-center">
                        @if (allowLogo)
                        {
                            <img class="img-logo" src="@Model["logo"].ToString()" alt="MENOO" />
                        }
                        else
                        {
                            <span class="title">MENOO</span>
                        }
                    </div>
                </div>
                <div class="section-center uppercase">
                    @Model["title"].ToString()
                </div>
            </div>
            @{
                if (!isOnlyUser)
                {
                    <div class="row">
                        <div class="column-50 section-left"><b>N° mesa:</b> @Model["tableNumber"].ToString()</div>
                        <div class="column-50 section-right"><b>Fecha: @Model["closedAt"].ToString()</b></div>
                    </div>
                    <div class="row">
                        <div class="section-left"><b>Cliente:</b> @Model["userName"].ToString()</div>
                    </div>
                }
                else
                {
                    <div class="row">
                        <div class="column-50 section-left"><b>N° mesa:</b> @Model["tableNumber"].ToString()</div>
                        <div class="column-50 section-right"><b>Hora retiro: @Model["closedAt"].ToString()</b></div>
                    </div>
                }
            }
            <div class="row"><hr /></div>
            <div class="row section-custom-header uppercase">
                <div class="section-center"><b>Consumo final</b></div>
            </div>
            @BuildTicketContent(isOnlyUser)
        </div>
    </body>
</html>

@helper BuildTicketContent(bool onlyUser)
{
    if (onlyUser)
    {
        var orderData = (Order)Model["orderData"];
        BuildSingleTicket(orderData);
    }
    else
    {

    }
}

@helper BuildSingleTicket(Order order)
{
    @foreach (ItemOrder item in order.Items)
    {
        <div class="row">
            <div class="column-80 section-left">
                <span class="item-quantity section-left">@item.Quantity.GetValueOrDefault() x </span><b>@item.Name</b>
            </div>
            <div class="column-20 section-right">
                @{
                    if (item.PriceWithDiscount.GetValueOrDefault() != item.Price.GetValueOrDefault())
                    {
                        <span class="invalid-text">$@item.Price.GetValueOrDefault()</span>
                    }
                }
                $@item.PriceWithDiscount
            </div>
        </div>
        <div class="row">&nbsp;</div>
        @if (item.Options != null)
        {
            <div class="row">
                <ul class="item-detail">
                    @{
                        foreach (ItemOption option in item.Options)
                        {
                            string extraName = option.Price == 0 ? "Opción: " + option.Name : "Opción: " + option.Quantity + " x " + option.Name;
                            <li class="row">
                                @if (option.Price > 0)
                                {
                                    <span class="column-80 section-left">
                                        @extraName
                                    </span>
                                    <span class="column-20 section-right">
                                        $@option.Price
                                    </span>
                                }
                                else
                                {
                                    <span class="section-left">
                                        @extraName
                                    </span>
                                }
                            </li>
                            <li class="row">&nbsp;</li>
                        }
                        if (!string.IsNullOrEmpty(item.GuestComment))
                        {
                            <li class="row">* @item.GuestComment</li>
                            <li class="row">&nbsp;</li>
                        }
                    }
                </ul>
            </div>
        }
        else if (!string.IsNullOrEmpty(item.GuestComment))
        {
            <div class="row">
                <ul class="item-detail">
                    <li class="row">@item.GuestComment</li>
                    <li class="row">&nbsp;</li>
                </ul>
            </div>
        }
        if (order.Extras.Count > 0)
        {
            <div class="row">
                @foreach (Extra extra in order.Extras)
                {
                    <div class="row">
                        <div class="column-50 section-left">@extra.Name</div>
                        <div class="column-50 section-right">@extra.Price.GetValueOrDefault().ToString("N2", CultureInfo.CreateSpecificCulture("en-US"))</div>
                    </div>
                }
            </div>
            <div class="row">&nbsp;</div>
        }
    }
}
